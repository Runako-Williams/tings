<!DOCTYPE html>
<html>
  <head>
    <title>Tings Bahamas</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag :all %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--Navigation bar-->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path do %>
          <h2 class="navbar-brand">TINGS<span>BAHAMAS</span></h2>
          <% end %>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to "View Listings", ads_path %>
            </li>
            <li>
              <%= link_to "Post An Ad", new_ad_path  %>
            </li>
            <% if user_signed_in? %>
              <li class="dropdown">
                <%= link_to "Your Account", '#', class: "dropdown-toggle", data: {toggle: "dropdown" } %>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Profile', '#' %></li>
                  <li><%= link_to 'Favourites', '#' %></li>
                  <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
            <% else %>
              <li>
                <%= link_to 'Log In', '#', data: {toggle: 'modal', target: '#exampleModal'} %>
              </li>
              <li class="btn-go"> 
                <%= link_to 'SIGN UP', '#', data: {toggle: 'modal', target: '#signup'} %>
              </li> 
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <!--/ Navigation bar-->

    <!--Modal box-->
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Launch demo modal
      </button>

      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    <!--/ Modal box-->

      <% if notice.present? %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert"><%= alert %></p>
      <% end %>
      
      <%= yield %>
    </div>

<!--Footer-->
  <footer id="footer" class="footer">
    <div class="container text-center">
      <ul class="social-links">
        <li><a href="#link"><i class="fa fa-twitter fa-fw"></i></a></li>
        <li><a href="#link"><i class="fa fa-facebook fa-fw"></i></a></li>
        <li><a href="#link"><i class="fa fa-google-plus fa-fw"></i></a></li>
        <li><a href="#link"><i class="fa fa-dribbble fa-fw"></i></a></li>
        <li><a href="#link"><i class="fa fa-linkedin fa-fw"></i></a></li>
      </ul>
      Â©2018 Tings Bahamas. All rights reserved.
      
    </div>
  </footer>
  </body>
</html>
